{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP Server",
            "type": "node",
            "request": "launch",
            "program": "php",
            "args": [
                "-S",
                "localhost:3000",
                "-t",
                "public"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}